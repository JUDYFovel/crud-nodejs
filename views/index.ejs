<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= docTitle %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <h1>Liste des Produits</h1>
    <a href="/add-product">Ajouter un Produit</a>
    <div class="products">
        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="product">
                    <h2><%= product.title %></h2>
                    <p>Prix: <%= product.price %> €</p>
                    <p>Description: <%= product.description %></p>
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                    <p>Utilisateur: <%= product.userId.name %> (<%= product.userId.email %>)</p>
                    <div class="actions">
                        <a href="/edit-product/<%= product._id %>">Modifier</a>
                        <form action="/delete-product/<%= product._id %>" method="POST" style="display:inline;">
                            <button type="submit">Supprimer</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>Aucun produit trouvé.</p>
        <% } %>
    </div>
</body>
</html>
